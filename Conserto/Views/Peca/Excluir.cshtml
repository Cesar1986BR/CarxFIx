@model Conserto.Models.VM.PecaVM

@{
    ViewBag.Title = "Excluir";
}

<h2>Excluir</h2>

<h3>Você tem certezam que quer excluir?</h3>
<div>

    <div class="container detalhes">
        <div class="col-md-8">

            <hr />
            <dl class="dl-horizontal">


                <dt>
                    @Html.DisplayNameFor(model => model.Pecas.Nome)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Pecas.Nome)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Pecas.Valor)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Pecas.Valor)
                </dd>

            </dl>

        </div>


        <div class="col-lg-4 foto">

            @if (!string.IsNullOrEmpty(Model.Pecas.Photo))
            {
                <img src="@Url.Content(Model.Pecas.Photo)" alt="Image" style="width:340px;height:340px;max-width: 100%; height: auto;" />
            }
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="clear:both">
            <input type="button" value="Excluir" class="btn btn-danger" data-toggle="modal" data-target="#myModal" /> |
            @Html.ActionLink("Cancelar", "Index",null, new { @class="btn - btn-info"})

        </div>

        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Atencão</h4>
                    </div>
                    <div class="modal-body">
                        <p>Uma vez excluido, será excluido permanentemente.</p>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Excluir" class="btn btn-danger" />
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn - btn-info" })
                        
                    </div>
                </div>

            </div>
        </div>
    }
        
    </div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")


@section Scripts{

    <script>

        $(document).ready(function () {

            $(".confirma_Excluir").click(function () {

                $(".teste").show();
            });

        });


         $('a[href="#navbar-more-show"], .navbar-more-overlay').on('click', function (event) {
             event.preventDefault();
             $('body').toggleClass('navbar-more-show');
             if ($('body').hasClass('navbar-more-show')) {
                 $('a[href="#navbar-more-show"]').closest('li').addClass('active');
             } else {
                 $('a[href="#navbar-more-show"]').closest('li').removeClass('active');
             }
             return false;
         });
   

    </script>


}
